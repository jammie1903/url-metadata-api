@using React.AspNet
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
  {
    <title>@ViewBag.Title</title>
    <meta name="twitter:title" property="og:title" content="@ViewBag.Title" />
  }

  <meta property="og:site_name" content="UrlMetadata.io" />
  <meta name="twitter:domain" content="@(Context.Request.Scheme + Context.Request.Host)" />

  @if (!string.IsNullOrWhiteSpace(ViewBag.Description))
  {
    <meta name="description" content="@ViewBag.Description">
    <meta name="twitter:description" property="og:description" content="@ViewBag.Description" />
  }

  @if (!string.IsNullOrWhiteSpace(ViewBag.Image))
  {
    <meta name="twitter:image" property="og:image" content="@Url.Content(ViewBag.Image)">
  }

  <meta name="theme-color" content="#048598" />
  <link href="~/css/styles.css" rel="stylesheet"/>
</head>
<body>
<header>
  
  <h1>
    <i class="site-icon icon"></i>
    Url Metadata IO
  </h1>
</header>
@RenderBody()
<script crossorigin="anonymous" src="https://cdnjs.cloudflare.com/ajax/libs/react/16.8.0/umd/react.development.js"></script>
<script crossorigin="anonymous" src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.8.0/umd/react-dom.development.js"></script>
<script src="@Url.Content("~/js/main.jsx")"></script>
@Html.ReactInitJavaScript()
</body>
</html>